<div class="container">
  <ul class="list-group">
    <li class="list-group-item"> Title: <%= @book.title %> </li>
    <% @book.genres.each do |genre| %>
      <li class="list-group-item"> Genre: <%= genre.name %> </li>
    <% end %>
    <li class="list-group-item"> Author: <%= @book.author %> </li>
    <% if @book.available? %>
      <li class="list-group-item"> <%= link_to("Borrow", borrow_book_path(@book)) %> </li>
    <% elsif @book.checked_out_by_current_user(current_user) %>
      <li class="list-group-item"> <%= link_to("Return", return_book_path(@book)) %> </li>
    <% else %>
      <li class="list-group-item"> Not available </li>
    <% end %>
  </ul>
</div>
